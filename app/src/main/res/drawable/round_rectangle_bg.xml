            <solid android:color="#1aFF6B00" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#FF6B00" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F2" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>